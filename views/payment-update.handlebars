<div class="container">
        <h1 class="text-center">payment details </h1>

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post" >
                <div>
                    <label for="pick_up_location">PICK UP LOCATION</label>
                    <input type="name" name="pick_up_location" id="pick_up_location" class="form-control" value="{{data.dataValues.pick_up_location}}">
                </div>
                <div>
                    <label for="drop_off_location">DROP OFF LOCATION</label>
                    <input type="name" name="drop_off_location" id="drop_off_location" class="form-control"  value="{{data.dataValues.drop_off_location}}">
                </div>

                <div>
                    <label for="cost">Cost</label>
                    <input type="integer" name="cost" id="cost" class="form-control" value="{{data.dataValues.cost}}">
                </div>
                
                 

                {{#if result}}
                {{#if result.success}}
                <div class="alert alert-success ">
                    Data saved succesfully
                </div>
                {{else}}
                 <div class="alert alert-danger ">
                    unable to save data
                </div>

                {{/if}}
                {{/if}}
                <div class="d-grid-mt-3">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
  </div>
  